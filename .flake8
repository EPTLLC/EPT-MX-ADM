[flake8]
max-line-length = 127
exclude = 
    .git,
    __pycache__,
    venv,
    env,
    .venv,
    .env,
    static/vendor,
    migrations
ignore = 
    E203,  # whitespace before ':'
    W503,  # line break before binary operator
    F401   # imported but unused (for __init__.py files)
per-file-ignores =
    __init__.py:F401
max-complexity = 10 